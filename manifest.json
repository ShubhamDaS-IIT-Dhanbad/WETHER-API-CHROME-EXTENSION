{
    "manifest_version": 3,
    "name": "Weather Forecast",
    "version": "1.0",
    "description": "Displays the current weather forecast.",
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "128": "icon.png"
      }
    },
    "permissions": [
      "geolocation",
      "activeTab"
    ]
  }
  